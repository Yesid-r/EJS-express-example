<!doctype html>
<html lang='es'>
    <head>
        <%- include('./templates/header')%>
    </head>
    <body>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <%- include('./templates/navbar')%>
                </div>
              
                  
                  
                  
                <div class="col-sm-4">
                    <label for="busqueda" class="form-label">busqueda</label>
                    <input type="text" id="busqueda" name="busqueda" class="form-control">
                </div> 
                  <div class="col-sm-4">
                    <label for="anio" class="form-label">a√±o</label>
                    <input type="text" id="anio" name="anio" class="form-control" pattern="[0-9]+" required>
                </div>
                <div class="col-sm-2">
                    <button type="submit" href="index.ejs"class="btn btn-primary">Filtrar</button>
                </div>
                
                    <div class="table-responsive">
                    <%if(peliculas.size >0){%>
                        <table class="table bm-2">
                            <thead>
                                <th>Movie_id</th>
                                <th>title</th>
                                <th>phase</th>
                                <th>category_name</th>
                                <th>release_year</th>
                                <th>running_time</th>
                                <th>rating_name</th>
                                <th>disc_format_name</th>
                                <th>number_discs</th>
                                <th>viewing_format_name</th>
                                <th>aspect_ratio_name</th>
                                <th>status</th>
                                <th>release_date</th>
                                <th>budget</th>
                                <th>gross</th>
                                <th>time_stamp</th>
                            </thead>
                            <tbody>
                                <% peliculas.forEach((v,k) => { %>
                                    <tr>
                                        <td><%= v.movie_id %></td>
                                        <td><%= v.title %></td>
                                        <td><%= v.phase %></td>
                                        <td><%= v.category_name %></td>
                                        <td><%= v.release_year %></td>
                                        <td><%= v.running_time %></td>
                                        <td><%= v.rating_name %></td>
                                        <td><%= v.disc_format_name %></td>
                                        <td><%= v.number_discs %></td>
                                        <td><%= v.viewing_format_name %></td>
                                        <td><%= v.aspect_ratio_name %></td>
                                        <td><%= v.status %></td>
                                        <td><%= v.release_date %></td>
                                        <td><%= v.budget %></td>
                                        <td><%= v.gross %></td>
                                        <td><%= v.time_stamp %></td>
                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                    <%}else{%>
                        <h5>No hay Registros de peliculas</h5>
                    <%}%>
                    
                </div>
                
            </div>
        </div>
    
        <%- include('./templates/footer')%>
    </body>
</html>
